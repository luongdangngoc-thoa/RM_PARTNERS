<slider-component class="modal-search-block slider-mobile-gutter page-width-desktop scroll-trigger animate--slide-in">
          <div class="hashtag-heading-group">
                <h2 class="hashtag-heading heading-en">
                    HASHTAGS
                </h2>
                <h2 class="hashtag-heading heading-jp">
                    ハッシュタグから選ぶ
                </h2>
            </div>
            <ul class="search_tags">
                {% for collection in section.settings.custom_hashtag_collection_list %}
                    <li class="search_tagItem">
                        <a href="{{ collection.url }}">{{ collection.title }}</a>
                    </li>
                {% endfor %}
            </ul>
</slider-component>

  {%- style -%}

 .hashtag-heading-group {
    margin-top: 3rem;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .hashtag-heading-group .hashtag-heading.heading-en {
    color:  #fff;
    font-family: Oswald;
    font-size: 1.4rem;
    font-style: normal;
    font-weight: 300;
    text-transform: uppercase;
  }

  .hashtag-heading-group .hashtag-heading.heading-jp {
    color: #fff;
    text-align: justify;
    font-family: Noto Serif JP;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    letter-spacing: 0.8px;
  }
.search_tags {
    list-style: none;
    display: flex;
    gap: 1em;
}

.modal-search-block .search_tagItem {
    color: #fff;
    padding: 1rem 0rem;
}
@media screen and (max-width: 750px) {
  .search_tags{
    overflow-x:scroll;
  }
  .modal-search-block .search_tags a:hover {
    line-height: 1.5;
    font-family: Oswald, serif;
    text-decoration: none;
    color:  #7B7B7B;
    background:#fff;
}
}
.search_tags li a {
    padding: 1rem 2rem;
    border: 1px solid;
    white-space: nowrap;
}
.modal-search-block .search_tags a {
    line-height: 1.5;
    font-family: Oswald, serif;
    text-decoration: none;
    color:  #fff;
}
{%- endstyle -%}