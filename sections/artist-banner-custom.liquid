<div class="page-banner-block">
  <div class="page-banner-block_image">
    {%- if metaobject.banner_img.value -%}
      {{ metaobject.banner_img.value | image_url: width: 3840 | image_tag: loading: 'lazy' }}
    {%- endif -%}
  </div>
  <div class="banner__text-wrapper banner__content banner__content--middle-left banner--desktop-transparent scroll-trigger animate--slide-in page-width-sp">
    <div class="banner__text banner__box content-container content-container--full-width-mobile color-inverse gradient banner__text--left banner__text-mobile--center">
      <h2 class="banner__heading medium">
        {{ metaobject.catch_copy.value }}<br>{{ metaobject.name.value }}</h2>
    </div>
  </div>
</div>


{%- style -%}
  .page-banner-block {
    position: relative;
    height: 50rem;
  }

  .page-banner-block_image {
    position: relative;
    margin: 0;
    height: 50rem;
    background-color: #fff;
  }

  .page-banner-block_image img {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    margin: auto;
    width: 100%;
    height: 100%;
    object-fit: cover;
    padding-left: calc(100% - 100% / 1440 * 1240);
  }

  .banner__text-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
  }
  .banner__text.banner__box {
    background: transparent;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 54.5rem;
    height: 100%;
  }

  @media screen and (min-width: 750px) {
    .banner__content.banner__content--middle-left {
      margin-left: 5rem;
    }
  }

  @media screen and (min-width: 990px) {
    .banner__content.banner__content--middle-left {
      align-items: center;
      justify-content: flex-start;
      display: flex;
      margin-left: 10rem;
    }
    .banner--desktop-transparent .banner__box {
      max-width: 89rem;
      border: none;
      border-radius: 0;
      box-shadow: none;
    }
  }
  .banner__heading {
    margin: 0;
    font-family: Noto Serif JP;
    font-size: 2.5rem;
    font-style: normal;
    font-weight: 700;
    line-height: 4.875rem;
    letter-spacing: 0.45rem;
    -webkit-text-stroke-width: 0.6px;
    -webkit-text-stroke-color: #333333;
    text-align: left;
  }

{%- endstyle -%}


{% schema %}
  {
    "name": "Artist banner",
    "tag": "section",
    "class": "section",
    "presets": [
      {
        "name": "Artist banner"
      }
    ]
  }
{% endschema %}