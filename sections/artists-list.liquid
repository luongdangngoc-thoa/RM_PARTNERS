<div class=" section-{{ section.id }} gradient color-{{ section.settings.section_color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

  <div class="artist-wrapper page-width">
    {% paginate shop.metaobjects.artist.values by 8 %}
      <div class="artist-list">
        {% for artist in shop.metaobjects.artist.values %}
          <div class="artist">
            <div class="artist-name-group">
              <p class="artist-name">
                {{ artist.name.value }}</p>
              <p class="artist-name artist-name-romaji">
                {{ artist.name_romaji.value }}</p>
            </div>
            <p class="artist-desc">
              {{ artist.description.value }}</p>
            <a class="artist-link" href="{{ page.url }}/{{ artist.name_romaji.value | downcase | replace: ' ', '-' }}">
              <span>
                VIEW MORE
              </span>
              {% render 'icon-arrow' %}</a>
          </div>
        {% endfor %}
      </div>
      <div class="page-pagination">
        {{ paginate | default_pagination }}
      </div>
    {% endpaginate %}
    <div class="artist-button">
      <a class="artist-link" href="{{section.settings.button_link}}">
        {{ section.settings.button_lable }} {% render 'icon-arrow' %}</a>
    </div>
  </div>
</div>

{% style %}
  .artist-wrapper {
    margin-top: 14rem;
  }

  .artist-list {
    display: grid;
    grid-template-columns: auto auto auto auto;
    gap: 4rem 3rem;
  }

  .artist {
    border-top: 1px solid #333;
  }

  .artist-name-group {
    border-bottom: 1px solid #333;
  }

  .artist-name {
    color: var(--primary, #333);
    color: rgb(var(--color-foreground));
    font-family: Noto Serif JP;
    font-size: 1.6rem;
    font-style: normal;
    font-weight: 400;
    line-height: calc(24 / 16);
    letter-spacing: 0.8px;
    margin: 1.2rem 0;
  }

  .artist-name-romaji {
    margin-top: unset;
    color: var(--primary, #333);
    color: rgb(var(--color-foreground));
    font-family: Oswald;
    font-size: 1.2rem;
    font-style: normal;
    font-weight: 400;
    line-height: calc(18 / 12);
    letter-spacing: 0.6px;
  }

  .artist-desc {
    color: var(--primary, #333);
    color: rgb(var(--color-foreground));
    font-family: Noto Serif JP;
    font-size: 1.4rem;
    font-style: normal;
    font-weight: 400;
    line-height: calc(24 / 14);
    letter-spacing: 0.7px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .artist-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .artist-link {
    text-decoration: none;
    color: var(--primary, #333);
    color: rgb(var(--color-foreground));
    font-family: Oswald;
    font-size: 1.6rem;
    font-style: normal;
    line-height: calc(24 / 16);
    letter-spacing: 0.8px;
    text-transform: uppercase;
    padding-bottom: 0.8rem;
    border-bottom: 1px solid #333;
  }

  .artist-button {
    margin-top: 6rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .page-pagination {
    margin-top: 6rem;
    width: 100%;
    display: flex;
    justify-content: center;
    gap: 3rem;
  }

  .page-pagination .page {
    color: var(--primary, #333);
    color: rgb(var(--color-foreground));
    font-family: Oswald;
    font-size: 1.6rem;
    font-weight: 400;
    padding: 0.8rem 0.3rem 0.3rem;
    line-height: 1 !important;
  }

  .page-pagination .page a {
    text-decoration: none;
    color: var(--primary, #333);
    color: rgb(var(--color-foreground));
    font-family: Oswald;
    font-size: 1.6rem;
    font-weight: 400;
    line-height: 1 !important;
  }

  .page-pagination .page.current {
    border-top: 1px solid #333;
    border-bottom: 1px solid #333;
  }

  .page-pagination .next,
  .page-pagination .prev {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .page-pagination .prev a,
  .page-pagination .next a {
    display: block;
    text-indent: -9999px;
    width: 50px;
    height: 37px;
  }

  .page-pagination .next::after,
  .page-pagination .prev::after {
    content: "";
    display: block;
    background-image: url('{{ 'icon-arrow.svg' | asset_url }}');
    background-repeat: no-repeat;
    width: 50px;
    height: 10px;
    float: left;
    position: absolute;
    z-index: -100;
  }

  .page-pagination .prev a:hover,
  .page-pagination .next a:hover,
  .page-pagination .page a:hover {
    opacity: 0.7;
  }

  .page-pagination .prev::after {
    transform: rotate(180deg);
  }

  .artist-button .artist-link {
    min-width: 24rem;
    height: 3.3rem;
    font-family: Noto Serif JP;

  }
{% endstyle %}
{% schema %}
  {
    "name": "Artists",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      }, {
        "type": "text",
        "id": "button_lable",
        "label": "Button lable",
        "default": "作品一覧を見る"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Product list more URL"
      }
    ]
  }
{% endschema %}