{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="legal_information">
    <h1 class="legal_information_type">特定商取引法についての表記</h1>
  </div>
  <div class="legal_information__form">
    <div class="legal_information_policy">
      <h3>{{ shop.legal_notice }}</h3>
    </div>
  </div>
</div>
</div>
