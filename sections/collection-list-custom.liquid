<slider-component class="slider-mobile-gutter page-width-desktop scroll-trigger animate--slide-in">
    <div class="tagsWrap">
      <div
        class="collapsible-content__header{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {%- if section.settings.heading != blank -%}
          <h2 class="collapsible-content__heading inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- else -%}
          <h2 class="visually-hidden">{{ 'accessibility.collapsible_content_title' | t }}</h2>
        {% endif %}
        {%- if section.settings.caption != blank -%}
          <p class="caption-with-letter-spacing">
            {{ section.settings.caption | escape }}
          </p>
        {% endif %}
      </div>
<ul class="search_tags">
    {% for collection in section.settings.custom_collection_list %}
        <li class="search_tagItem">
            <a href="{{ collection.url }}">{{ collection.title }}</a>
        </li>
    {% endfor %}
</ul>
</div>
</slider-component>



  {% schema %}
  {
    "name": "コレクションタグ",
    "settings": [
      {
        "type": "text",
        "id": "caption",
        "label": "キャプション"
      },
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "見出し",
        "default": "Collapsible content"
      },  
      {
        "type": "collection_list",
        "label": "カスタムコレクションリスト",
        "id": "custom_collection_list"
      },
      {
        "type": "range",
        "label": "最大表示数",
        "id": "max_collections",
        "min": 1,
        "max": 5,
        "default": 5
      }
    ],
    "presets": [
      {
        "name": "コレクションタグ",
        "category": "カスタムコンテンツ"
      }
    ]
  }
  {% endschema %}
  
  {%- style -%}
